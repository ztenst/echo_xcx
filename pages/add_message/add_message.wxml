<import src="../../components/toast/toast.wxml"/>
<template is="toast" data="{{ ...$toast }}"/>
<view class="add_message bg-f5" >
    <view class="blank20"></view>
    <form action="" bindsubmit='addMes'>
        <view class="plt24 bg-fff">
            <view class="line">
                <label for="">姓名</label>
                <input type="text" name="name" class="ml100 w300" placeholder-class="c-ccc" placeholder="请输入姓名" bindinput="getName" />
            </view>
            <view class="line ">
                <label for="">手机</label>
                <input type="number" name="userphone" value='{{phone}}' class="ml100 w300" placeholder-class="c-ccc" placeholder="请输入手机号" bindinput="getPhone"  style="width:496rpx;display: inline-block;vertical-align: middle;"/>
            </view>
            <view class="line nbtm">
                <label for="">公司名</label>
                <input type="text" name="usercompany" class="ml100 w300" placeholder-class="c-ccc" placeholder="请输入公司名或门店码，独立经纪人可留空" bindinput="getCompanyName"/>
            </view>
        </view>

        <view class="big-btn no-fixed">
            <button class="btnBaoBei box box-pack-center box-align-center" form-type="submit">
                提<text style="width: 20rpx;"></text>交
            </button>
        </view>
    </form>

</view>